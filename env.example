# Configuration OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# Limites d'utilisation (optionnel, valeurs par défaut si non définies)
RATE_LIMIT_DAILY=50
RATE_LIMIT_HOURLY=10
RATE_LIMIT_PER_MINUTE=3

# Base de données Firebase (remplace SQLite/Prisma)
FIREBASE_PROJECT_ID=your-firebase-project-id
# Option 1: Utiliser les variables individuelles
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
# Option 2: Utiliser un JSON complet (alternative à l'option 1)
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}'

# Ancienne base de données (optionnel, pour migration)
# DATABASE_URL="file:./dev.db"

# Configuration Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM="Numerologie App <noreply@numerologie.app>"
EMAIL_SERVICE=gmail

# URL de base de l'application
NEXT_PUBLIC_BASE_URL=http://localhost:3001

# Configuration Admin (optionnel)
ADMIN_PASSWORD=admin123
# Pour la production, générez un hash avec bcrypt
# ADMIN_PASSWORD_HASH=your_bcrypt_hash_here
